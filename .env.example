# IoT Face Detection & Photo Capture System - Environment Variables
# Copy this file to .env and fill in your actual values

# Camera Configuration
CAMERA_INDEX=0
CAMERA_RESOLUTION_WIDTH=640
CAMERA_RESOLUTION_HEIGHT=480

# Logging Configuration
LOG_LEVEL=INFO

# Cloud Sync Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Device Identification
DEVICE_ID=device_001

# SMS Notifications (SMS-Gate)
SMS_USERNAME=your-sms-username
SMS_PASSWORD=your-sms-password
SMS_DEVICE_ID=your-sms-device-id
SMS_API_URL=https://api.sms-gate.app/3rdparty/v1/message

# Optional: Alternative cloud providers
# FIREBASE_CREDENTIALS=path/to/firebase-credentials.json
# AWS_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY=your-access-key
# AWS_SECRET_KEY=your-secret-key
